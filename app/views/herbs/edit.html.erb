<div class="edit">
  <h1>Edit Herb</h1>
  <%= form_for :herb, :html => {:class => 'edit__form'}, url: herb_path(@herb), method: :patch do |f| %>
    <% if @herb.errors.any? %>
      <%# loop %>
      <% @herb.errors.full_messages.each do |msg| %>
        <div class="form__error">
          <%= msg %>
        </div>
      <% end %>
    <% end %>
    <div class="edit__field-wrapper">
      <%= f.label :name %>
      <br>
      <%= f.text_field(:name, {:class => 'edit__field'}) %>
    </div>
    
    <div class="edit__field-wrapper">
      <%= f.label :description %>
      <br>
      <%= f.text_area(:description, {:class => 'edit__field'}) %>
    </div>

    <div class="edit__field-wrapper">
      <%= f.submit(:class => 'edit__submit') %>
    </div>
  <% end %>
</div>