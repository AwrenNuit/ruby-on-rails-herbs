<div class="add">
  <h1>Add herb</h1>
  <%= form_for :herb, :html => {:class => 'add__form'}, url: herbs_path do |f| %>
    <% if @herb.errors.any? %>
      <%# loop %>
      <% @herb.errors.full_messages.each do |msg| %>
        <div class="form__error">
          <%= msg %>
        </div>
      <% end %>
    <% end %>
    <div class="add__field-wrapper">
      <%= f.label :name %>
      <br>
      <%= f.text_field(:name, {:class => 'add__field'}) %>
    </div>
    
    <div class="add__field-wrapper">
      <%= f.label :description %>
      <br>
      <%= f.text_area(:description, {:class => 'add__field'}) %>
    </div>

    <div class="add__field-wrapper">
    <%= f.submit(:class => 'add__submit') %>
  </div>
  <% end %>
</div>